<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_weight="1"
        android:background="#BBBCB6"
        android:inputType="textPersonName"
        android:gravity="right|center"
        android:textSize="40pt"
        android:layout_marginBottom="1pt"
        android:text="0" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow
            android:layout_marginBottom="1pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <Button
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:id="@+id/buAC"
                android:text="AC"
                android:onClick="acEvent"
                android:background="@color/black"
                ></Button>

            <Button
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:onClick="numberEvent"
                android:id="@+id/buPlusMinus"
                android:text="+/-"
                android:background="@color/black"
                ></Button>

            <Button
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:id="@+id/buDivide"
                android:onClick="operatorEvent"
                android:layout_marginRight="1pt"

                android:text="/"
                android:background="@color/black"
                ></Button>

            <Button
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:id="@+id/buMinus"
                android:onClick="operatorEvent"
                android:text="-"
                android:background="#746D69"
                ></Button>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1pt">
        <Button
            android:onClick="numberEvent"
        android:layout_height="30pt"
        android:layout_width="30pt"
        android:layout_weight="1"
        android:layout_marginRight="1pt"
        android:id="@+id/bu7"
        android:text="7"
        android:background="@color/black"
        ></Button>

            <Button
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:onClick="numberEvent"
                android:id="@+id/bu8"
                android:text="8"
                android:background="@color/black"
                ></Button>

            <Button
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:onClick="numberEvent"
                android:id="@+id/bu9"
                android:text="9"
                android:background="@color/black"
                ></Button>

            <Button
                android:onClick="percentEvent"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:id="@+id/buPercent"

                android:text="%"
                android:background="#746D69"
                ></Button>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1pt">
            <Button
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:onClick="numberEvent"
                android:layout_marginRight="1pt"
                android:id="@+id/bu4"
                android:text="4"
                android:background="@color/black"
                ></Button>

            <Button
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:onClick="numberEvent"
                android:id="@+id/bu5"
                android:text="5"
                android:background="@color/black"
                ></Button>

            <Button
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:onClick="numberEvent"
                android:id="@+id/bu6"
                android:text="6"
                android:background="@color/black"
                ></Button>

            <Button
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:id="@+id/buMultiply"
                android:onClick="operatorEvent"
                android:text="*"
                android:background="#4B4B4C"
                ></Button>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1pt">
            <Button
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:id="@+id/bu1"
                android:onClick="numberEvent"
                android:text="1"
                android:background="@color/black"
                ></Button>

            <Button
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:onClick="numberEvent"
                android:id="@+id/bu2"
                android:text="2"
                android:background="@color/black"
                ></Button>

            <Button
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:id="@+id/bu3"
                android:onClick="numberEvent"
                android:text="3"
                android:background="@color/black"
                ></Button>

            <Button
                android:id="@+id/buPlus"
                android:layout_width="30pt"
                android:layout_height="match_parent"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="#746D69"
                android:onClick="operatorEvent"
                android:text="+"></Button>
        </TableRow>



        </TableLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >


        <Button
            android:layout_marginRight="1pt"
            android:layout_height="30pt"
            android:layout_width="46pt"
            android:layout_weight="2"
            android:id="@+id/bu0"
            android:onClick="numberEvent"
            android:text="0"
            android:background="@color/black"
            ></Button>
        <Button
            android:layout_height="30pt"
            android:layout_width="46pt"
            android:layout_weight="1"
            android:layout_marginRight="1pt"
            android:onClick="numberEvent"
            android:id="@+id/buDot"
            android:text="."
            android:background="#746D69"
            ></Button>
        <Button
            android:layout_height="30pt"
            android:layout_width="30pt"
            android:layout_weight="1"
            android:layout_marginRight="1pt"
            android:id="@+id/buEqual"
            android:onClick="equalEvent"
            android:text="="
            android:background="@color/purple_700"

            ></Button>
    </TableRow>

</LinearLayout>
    </LinearLayout>

